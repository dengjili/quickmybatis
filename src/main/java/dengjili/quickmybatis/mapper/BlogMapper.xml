<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dengjili.quickmybatis.mapper.BlogMapper">
  <select id="selectBlog" resultType="dengjili.quickmybatis.pojo.Blog">
    select * from Blog where id = #{id}
  </select>
  
  <insert id="addBlog" parameterType="dengjili.quickmybatis.pojo.Blog" useGeneratedKeys="true" keyProperty="id">
  	insert into blog(name) values(#{name})
  </insert>
  
</mapper>